{
    // Native Editor Settings
    "telemetry.telemetryLevel": "off",
    "debug.console.fontSize": 16,
    "debug.toolBarLocation": "commandCenter",
    "window.commandCenter": true,
    "window.customTitleBarVisibility": "auto",
    "window.titleBarStyle": "custom",
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.detectIndentation": false,
    "editor.fontFamily": "Jetbrains Mono",
    "editor.fontSize": 16,
    "editor.minimap.enabled": false,
    "editor.rulers": [
        79,
        119
    ],
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.openRepositoryInParentFolders": "never",
    "git.defaultBranchName": "master",
    "git.timeline.showUncommitted": true,
    "scm.showHistoryGraph": false,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.fontFamily": "Jetbrains Mono",
    "terminal.integrated.fontSize": 16,
    "terminal.external.linuxExec": "xfce4-terminal",
    "window.title": "code - ${rootName}",
    "workbench.commandPalette.preserveInput": true,
    "workbench.editor.empty.hint": "hidden",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.sideBar.location": "left",
    "workbench.activityBar.location": "default",

    // Theme Settings
    "workbench.colorTheme": "SynthWave '84",
    "synthwave84.brightness": 0.45,
    "workbench.iconTheme": "vscode-icons",

    // Extension: Xdebug
    // Allow for xdebug in all projects without needing per-project configs
    "launch": {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Listen for XDebug",
                "type": "php",
                "request": "launch",
                "port": 9003
            }
        ]
    },

    // Extension: "Laravel Artisan" by Ryan Naddy
    "artisan.serve.defaultHost": "0.0.0.0",

    // Extension: "PHP Namespace Resolver" by Mehedi Hassan
    "namespaceResolver.leadingSeparator": false,
    "namespaceResolver.sortAlphabetically": true,

    // Extension: "php cs fixer" by junstyle
    "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
    "php-cs-fixer.lastDownload": 1725385950333,
    "php-cs-fixer.rules": "@PSR12",
    "[php]": {
        "editor.defaultFormatter": "junstyle.php-cs-fixer",
    },

    // Extension: "PHP DocBlocker" by Neil Brayfield
    "php-docblocker.qualifyClassNames": true,

    // Extension: "Todo Tree" by Gruntfuggly
    "todo-tree.highlights.useColourScheme": true,
    "todo-tree.highlights.defaultHighlight": {
		"background": "#f5e33f",
		"foreground": "#000000",
		"fontWeight": "bold",
		"iconColour": "#ffffff"
	},
    "todo-tree.filtering.excludeGlobs": [
		"**/node_modules/*/**",
		"*.csv",
		"addons",
		"*.md"
	],

    // Extension: "Focus" by QuanLi
    "focus.opacity": "0.5",
    "focus.highlightRange": "block",

    // Extension: "Toggle Zen Mode" by Fahab Talib
    "zenMode.restore": false,

    // Extension: "PHP Intelephense" by Ben Mewburn
    // This block adds code sense for non-core PHP functionality.
    "intelephense.stubs": [
        "apache",
        "bcmath",
        "bz2",
        "calendar",
        "com_dotnet",
        "Core",
        "ctype",
        "curl",
        "date",
        "dba",
        "dom",
        "enchant",
        "exif",
        "FFI",
        "fileinfo",
        "filter",
        "fpm",
        "ftp",
        "gd",
        "gettext",
        "gmp",
        "hash",
        "iconv",
        "imap",
        "intl",
        "json",
        "ldap",
        "libxml",
        "mbstring",
        "meta",
        "mysqli",
        "oci8",
        "odbc",
        "openssl",
        "pcntl",
        "pcre",
        "PDO",
        "pdo_ibm",
        "pdo_mysql",
        "pdo_pgsql",
        "pdo_sqlite",
        "pgsql",
        "Phar",
        "posix",
        "pspell",
        "readline",
        "Reflection",
        "session",
        "shmop",
        "SimpleXML",
        "snmp",
        "soap",
        "sockets",
        "sodium",
        "SPL",
        "sqlite3",
        "standard",
        "superglobals",
        "sysvmsg",
        "sysvsem",
        "sysvshm",
        "tidy",
        "tokenizer",
        "xml",
        "xmlreader",
        "xmlrpc",
        "xmlwriter",
        "xsl",
        "Zend OPcache",
        "zip",
        "zlib",
        "yaml"
    ]
}
